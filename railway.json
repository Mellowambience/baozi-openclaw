{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "discord-bot/Dockerfile",
    "dockerContextPath": "discord-bot"
  },
  "deploy": {
    "startCommand": "node dist/bot.js",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3
  }
}
